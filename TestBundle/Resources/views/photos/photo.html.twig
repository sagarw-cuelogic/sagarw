{% extends 'AcmeTestBundle::layout.html.twig'%}

{% block content %}
	{{ parent() }}	
{% endblock %}

{% block middle %}
<div class="middle">
Welcome to Gallery page

{% for flashMessage in app.session.flashbag.get('notice') %}
 
<div style='color:red;font-size:12px;'>{{ flashMessage }}</div>
 
{% endfor %}


<div class="form">
{{ form_start(form , {attr :{novalidate:'novalidate'}}) }}

<div style='width:500px;'>
	
	<div class='files'>
		{{ form_label(form.photo_name) }}
	</div>

		{{ form_widget(form.photo_name) }}
	<div class='errors'>
	{{ form_errors(form.photo_name) }}
	</div>
</div>
<div style='width:320px;float:right;position:relative;top:-20px;'>
	{{ form_widget(form.Upload) }}
</div>		
{{ form_end(form)}}

</div>
{% block photos%}
	<div style='margin-top:10px;width:610px;'>
	<ul class='photos'>
	{% for contents in news %}
			<li><img src='{{ asset('uploads/') }}{{contents.photoName}}' style='width:100px;height:100px;border:3px solid #333'><a href='{{path('test_delete',{'name': contents.photoName,'id': contents.photoId})}}' style='font-size:12px;'>Delete</a></li>
	{% endfor %}
	</div>
{% endblock %}
</div>
{% endblock %}

{% block footer %}
{{ parent() }}
{% endblock %}